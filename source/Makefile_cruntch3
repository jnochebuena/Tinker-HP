MODS   = $(MODSAM) $(MODSNZ)
OBJS   = $(OBJSAM) $(OBJSNZ)

all: libtinker analyze bar dynamic testgrad minimize

everything: libtinker analyze bar dynamic testgrad

analyze: $(MODS) $(OBJS)
	./library.make
	$(RunF77) $(FFLAGS) $(FFLAGS2) -o analyze.x analyze.o $(LIBS) $(CFGEM) $(BLAS) $(FFTDECOMP) $(LIBNETCDF) $(CFGEM)
	mv analyze.x ../bin/analyze
#
bar: $(MODS) $(OBJS)
	./library.make
	$(RunF77) $(FFLAGS) $(FFLAGS2) -o bar.x bar.o $(LIBS) $(BLAS) $(FFTDECOMP) $(LIBNETCDF) $(CFGEM)
	mv bar.x ../bin/bar
#
dynamic: $(MODS) $(OBJS)
	./library.make
	$(RunF77) $(FFLAGS) $(FFLAGS2) -o dynamic.x dynamic.o $(LIBS) $(BLAS) $(FFTDECOMP) $(LIBNETCDF) $(CFGEM)
	mv dynamic.x ../bin/dynamic
#
testgrad: $(MODS) $(OBJS)
	./library.make
	$(RunF77) $(FFLAGS) $(FFLAGS2) -o testgrad.x testgrad.o $(LIBS) $(BLAS) $(FFTDECOMP) $(LIBNETCDF) $(CFGEM)
	mv testgrad.x ../bin/testgrad
#
minimize: $(MODS) $(OBJS)
	./library.make
	$(RunF77) $(FFLAGS) $(FFLAGS2) -o minimize.x minimize.o $(LIBS) $(BLAS) $(FFTDECOMP) $(LIBNETCDF) $(CFGEM)
	mv minimize.x ../bin/minimize
#
libtinker: $(MODS) $(OBJS)
	./library.make
#
%.o: %.f
	$(RunF77) $(FFLAGS) -c $*.f 
%.o: %.F
	$(RunF77) $(FFLAGS) -c $*.F
%.o: %.f90
	$(RunF77) $(FFLAGS) -c $*.f90 $(FFTDECOMP)
%.o: %.F90
	$(RunF77) -c $*.F90 $(CFGEM)
### GAC: have to make CFGEM here?
#
clean:
	rm -fr $(MODS) $(OBJS) *.exe *.mod
	rm -f libtinker.a 
#
tags: tags-mark
	-'rm' -f tags
	ctags *.f
	-'rm' -f tags-mark

tags-mark:
	touch tags-mark

debug:
	cat *.f > xxx.f
	ftnchek xxx.f
	rm xxx.f
